<!-- immovable content layers -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/sl_left_spacer"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <include layout="?attr/slLeftLayout"/>
    </LinearLayout>

    <LinearLayout
            android:id="@id/sl_right_spacer"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <include layout="?attr/slRightLayout"/>

    </LinearLayout>

</merge>